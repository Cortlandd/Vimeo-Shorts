<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.vimeoshorts" >

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.app.vimeoshorts.VimeoShorts"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Splash Screen-->
        <activity
            android:name="com.app.vimeoshorts.activities.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main activity -->
        <activity android:name="com.app.vimeoshorts.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.app.vimeoshorts.activities.FilmActivity"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true">
        </activity>
    </application>

</manifest>